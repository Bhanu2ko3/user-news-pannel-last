<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsReportingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item> <!-- Instagram-like blue -->
        <item name="colorPrimaryVariant">@color/white</item> <!-- Instagram purple gradient -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text/icons on primary color -->
        <item name="colorSurface">#FFFFFF</item> <!-- White background -->
        <item name="colorOnSurface">#000000</item> <!-- Black text/icons on surface -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Transparent status bar -->
        <item name="android:windowLightStatusBar">true</item> <!-- Dark icons for light status bar -->
        <item name="android:navigationBarColor">#FFFFFF</item> <!-- White navigation bar -->
        <item name="android:windowLightNavigationBar">true</item> <!-- Dark icons for light navigation bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/nav_bar_color</item>


        <!-- Customize buttons -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="Theme.NewsReportingApp" parent="Base.Theme.NewsReportingApp" />

    <!-- Define the custom button style -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">#405DE6</item> <!-- Instagram-like blue -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item> <!-- Rounded corners -->
    </style>
</resources>