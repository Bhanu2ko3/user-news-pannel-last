<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- News Image -->
    <ImageView
        android:id="@+id/newsImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image" /> <!-- Default placeholder -->

    <!-- Title and Timestamp in the same row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- News Title -->
        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="News Title"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- News Description -->
    <TextView
        android:id="@+id/newsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="News Description"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="#666666"
        android:textSize="14sp" />

    <!-- News Reporter and Timestamp in the same row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <!-- News Reporter -->
        <TextView
            android:id="@+id/newsReporter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reporter: Unknown"
            android:textColor="#999999"
            android:textSize="12sp" />

        <!-- Timestamp at Bottom-Right -->
        <TextView
            android:id="@+id/newsTimestampBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 mins ago"
            android:textColor="#999999"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
