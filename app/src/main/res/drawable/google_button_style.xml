<!-- res/drawable/custom_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background (optional, set to transparent if not needed) -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Stroke (outline) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Light gray stroke -->

    <!-- Corners (optional, for rounded corners) -->
    <corners android:radius="8dp" /> <!-- Adjust radius as needed -->
</shape>