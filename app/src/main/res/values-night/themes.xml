<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsReportingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/white</item> <!-- Instagram-like blue -->
        <item name="colorPrimaryVariant">@color/white</item> <!-- Instagram purple gradient -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text/icons on primary color -->
        <item name="colorSurface">#121212</item> <!-- Dark background -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- White text/icons on dark surface -->
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Transparent status bar -->
        <item name="android:windowLightStatusBar">false</item> <!-- Light icons for dark status bar -->
        <item name="android:navigationBarColor">#121212</item> <!-- Dark navigation bar -->
        <item name="android:windowLightNavigationBar">false</item> <!-- Light icons for dark navigation bar -->

        <!-- Customize buttons -->
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <!-- Define the custom button style -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">#405DE6</item> <!-- Instagram-like blue -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item> <!-- Rounded corners -->
    </style>
</resources>