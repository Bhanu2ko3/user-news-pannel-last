<!-- res/drawable/search_input_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#6200EE" /> <!-- Purple border when focused -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Light gray border by default -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>